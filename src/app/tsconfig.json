{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "Server/*": ["src/server/*"],
      "Client/*": ["src/client/*"]
    },
    "incremental": true
  },
  "include": ["src/server/**/*.ts"],
  "exclude": ["src/client/.next"]
}
